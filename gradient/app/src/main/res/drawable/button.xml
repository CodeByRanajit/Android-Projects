<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border with gradient effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FF5733"
                android:endColor="#FF33A1"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Solid background inside the gradient border -->
    <item android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the button -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
